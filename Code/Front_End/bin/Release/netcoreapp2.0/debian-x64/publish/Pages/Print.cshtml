@page
@model CwuAdvising.Pages.PrintModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Schedule</title>

    <script src="~/js/jquery.js"></script>

    <style>
        div {
            margin: 0;
        }

        #Container {
            width: 8.5in;
            height: 11in;
            margin: 0;
        }

        #Title {
            text-align: center;
            font-size: 24px;
            margin-top: 0.25in;
        }

        #Information {
            margin-top: 0.25in;
            margin-left: 0.5in;
            width: 4in;
            padding: 0.25in;
        }

        .InfoBox {
            display: flex;
        }

        #Schedule {
            margin-top: 0.25in;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }

        .Quarter {
            border: thin solid black;
            margin-left: 0.2in;
            margin-bottom: .1in;
            width: 1.8in;
        }

        .QuarterTitle {
            text-align: center;
            font-size: 20px;
            margin-top: 0;
            margin-bottom: .1in;
        }

        .Credits {
            margin-top: 0.1in;
        }

        .Credits, .Course {
            margin-left: 0.1in;
        }

        .InfoLabel {
            width: 1in;
        }

    </style>

    <script>
        var Schedule = JSON.parse('@Html.Raw(AdvisingModel.LoadBaseCase())');
        $(document).ready(function () {
            for (var i = 0; i < Schedule.Quarters.length; i++) {
                AddQuarter(Schedule.Quarters[i]);
            }
        });

        function AddQuarter(Quarter) {
            var QuarterDiv = $("<div></div>");
            QuarterDiv.attr("class", "Quarter");

            var Title = $("<div></div>");
            Title.attr("class", "QuarterTitle");
            Title.text(Quarter.Title);
            QuarterDiv.append(Title);

            var TotalCredits = 0;
            for (var i = 0; i < Quarter.Courses.length; i++) {
                TotalCredits += parseInt(Quarter.Courses[i].Credits);
                var CourseDiv = $("<div></div>");
                CourseDiv.attr("class", "Course");
                CourseDiv.text(Quarter.Courses[i].Title);
                QuarterDiv.append(CourseDiv);
            }

            var CreditsDiv = $("<div></div>");
            CreditsDiv.attr("class", "Credits");
            CreditsDiv.text("Total Credits: " + TotalCredits);
            QuarterDiv.append(CreditsDiv);
            $("#Schedule").append(QuarterDiv);
        }
    </script>
</head>
<body>
    <div id="Container">
        <div id="Title">Student Schedule</div>
        <div id="Information">
            <div class="InfoBox">
                <div class="InfoLabel">Name:</div>
                <div>@AdvisingModel.CurrentStudent.Name</div>
            </div>
            <div class="InfoBox">
                <div class="InfoLabel">ID:</div>
                <div>@AdvisingModel.CurrentStudent.ID</div>
            </div>
            <div class="InfoBox">
                <div class="InfoLabel">Degree:</div>
                <div>@AdvisingModel.CurrentStudent.Year - @AdvisingModel.CurrentStudent.Degree</div>
            </div>
        </div>
        <div id="Schedule">

        </div>
    </div>
</body>
</html>
