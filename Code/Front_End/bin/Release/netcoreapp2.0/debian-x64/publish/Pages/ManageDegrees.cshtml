@page
@model CwuAdvising.Pages.ManageDegreesModel
@{
    ViewData["Title"] = "Manage Degrees";
}

<script src="~/js/CourseSearch.js"></script>
<script>

    @{ ManageDegreesModel.LoadDegreeModelList(); }
    var CourseListFromServer = '@Html.Raw(ManageCoursesModel.CourseListAsJson())';
    var DegreeModel = '@Html.Raw(ManageDegreesModel.ReadModel())';
</script>

<script src="~/js/ManageDegrees.js"></script>

<div class="PageRow Flex CenterFlex">
    <div class="Block Border Padded">
        <div class="Title">Create New Degree</div>
        <div class="Flex CenterFlex">
            <div class="Flex ">
                <div class="LabelLeft">Academic Year:</div>
                <div class="LabelRight">
                    <input type="number" min="2012" max="2030" value="2017" id="CreateDegreeYear" />
                </div>
            </div>
            <div class="Flex">
                <div class="LabelLeft">Name:</div>
                <div class="LabelRight">
                    <input type="text" id="CreateDegreeName" />
                </div>
            </div>
        </div>

        <div><button type="button" class="BigButton" id="CreateDegreeButton">Create Degree</button></div>
    </div>
</div>

<div class="PageRow Flex CenterFlex">
    <div class="Block Border Padded">
        <div class="Title">Load Degree</div>
        <div class="Flex CenterFlex">
            <div class="Flex">
                <div class="LabelLeft">Degree:</div>
                <div class="LabelRight">
                    <select name="Department" id="DegreeSelect"></select>
                </div>
            </div>
        </div>

        <div><button type="button" class="BigButton" id="LoadDegreeButton">Load Degree</button></div>
    </div>
</div>
<div id="ResultsContainer">
    <div class="PageRow Flex CenterFlex">
        <div class="Border" id="SearchBox">
            <div class="Title">Course Search</div>
            <div class="Flex CenterFlex">
                <div class="Flex ">
                    <div class="LabelLeft">Courses Numbered:</div>
                    <div class="LabelRight"><input type="text" style="width: 20%;" value="0" id="MinCourseSearch" /> to <input type="text" style="width: 20%;" value="999" id="MaxCourseSearch" /></div>
                </div>
                <div class="Flex">
                    <div class="LabelLeft">Department:</div>
                    <div class="LabelRight">
                        <select id="DepartmentSearch" name="Department">
                            <option value="any">--- Any ---</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="Flex CenterFlex">
                <div class="Flex">
                    <div class="LabelLeft Border">Courses Offered:</div>
                    <div class="LabelRight Flex">
                        <input type="checkbox" id="SummerSearch" /> Summer
                        <input type="checkbox" id="FallSearch" checked /> Fall
                        <input type="checkbox" id="WinterSearch" checked /> Winter
                        <input type="checkbox" id="SpringSearch" checked /> Spring
                    </div>
                </div>
            </div>

            <div><input type="submit" value="Search" class="BigButton" id="SearchCourses" /></div>
        </div>
    </div>
    <div class="Flex CenterFlex">
        <div class="Border" style="min-width: 800px;">
            <div class="Title" id="SearchResults">Search Results: </div>
            <div class="Flex CenterFlex" id="CourseContainer"></div>
        </div>
    </div>
    <div class="Flex CenterFlex">
        <div class="Border" id="RequirementContainer" style="min-width: 800px;">
            <div class="Title">Current Degree:</div><div class="Title" id="CurrentDegreeName"></div>
            <div id="DegreeRequirementBox" class="Flex CenterFlex">&nbsp;</div>
            <div class="Flex CenterFlex"><button class="RegularButton" id="SaveDegreeButton">Save Changes</button></div>
        </div>
    </div>
</div>