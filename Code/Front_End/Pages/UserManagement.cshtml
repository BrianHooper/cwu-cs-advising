@page
@model CwuAdvising.Pages.UserManagementModel
@{
    ViewData["Title"] = "User Management";
}

<div class="Title">User Management</div>

<script>
    var UserList = JSON.parse('@Html.Raw(Model.UserListAsJson())');
</script>
<script src="~/js/UserManagement.js"></script>

<div class="Flex CenterFlex">
    <div class="CenterFlex" style="width: 100%; text-align: center;">
        <div class="Border ListHeader" style="width: 30px;">&#10060;</div>
        <div class="Border ListHeader" style="width: 200px;">Username</div>
        <div class="Border ListHeader" style="width: 60px;">Admin</div>
        <div class="Border ListHeader" style="width: 60px;">Active</div>
    </div>
    <div class="" id="UserContainer">

    </div>
    <div style="width: 100%; text-align: center;">
        <button type="button" class="RegularButton" id="SaveUsers">Save Changes</button>
    </div>



</div>
<div style="display: flex; flex-direction: column; align-items: center;">
    <div style="color: red;">@UserManagementModel.CreateUserErrorMessage</div>
    @{
        UserManagementModel.CreateUserErrorMessage = "";
    }
    <form method="post">
        <div id="LoginBox" class="Border">
            <div class="Title">Add user: </div>
            <div class="Flex">
                <div class="LabelLeft"><label asp-for="CreateUser.Username">Username</label></div>
                <div class="LabelRight"><input asp-for="CreateUser.Username" /></div>
            </div>
            <div><span asp-validation-for="CreateUser.Username" style="color: red;"></span></div>
            <div class="Flex">
                <div class="LabelLeft"><label asp-for="CreateUser.PasswordOne">Password</label></div>
                <div class="LabelRight"><input type="password" asp-for="CreateUser.PasswordOne"></div>
            </div>
            <div><span asp-validation-for="CreateUser.PasswordOne" style="color: red;"></span></div>
            <div class="Flex">
                <div class="LabelLeft"><label asp-for="CreateUser.PasswordTwo">Re-enter password</label></div>
                <div class="LabelRight"><input type="password" asp-for="CreateUser.PasswordTwo"></div>
            </div>
            <div><span asp-validation-for="CreateUser.PasswordTwo" style="color: red;"></span></div>
            <button type="submit" class="BigButton">Create</button>
        </div>
    </form>
</div>